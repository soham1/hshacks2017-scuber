  <% include ../partials/head %>
  <body>
    <header>
      <nav class="top-nav">
        <div class="container">
          <div class="nav-wrapper">
            <a class="page-title">Ride Confirmation</a>
          </div>
        </div>
      </nav>
      <style>
        html {
          background-image: url("/images/pattern.png");
        }
        
        .top-nav {
          height: 84px;
        }
        
        nav {
          color: #fff;
          background-color: #ee6e73;
          width: 100%;
        }
        
        .page-title {
          font-size: 32px;
          line-height: 84px;
        }
      </style>
    </header>  
    
    <div class="container">
      <div class="row">
        <div style="display: flex; align-items: center">
          <div class="col s2"></div>
          <div class="col s8">
            <div class="card hoverable">
              <div class="card-image">
                <img src="/images/confirmRide.png">
                <span class="card-title"></span>
              </div>
              <div class="card-content">
                <span class="card-title">Ride about to be ordered</span>
                <p>You are about to find a ride to <%= destination %>. This is an irreversible action,
                and failing to accept the ride could result in a lower rider ranking.</p>
                <p>Would you like to continue?</p>
              </div>
              <div class="card-action">
                <a class="waves-effect waves-light btn red-lighten-2" href="/findRide">
                  <span>Call a Scuber</span>
                </a>
                <a href="/dashboard" style="padding-left: 16px">Cancel</a>
              </div>
            </div>
          </div>
          <div class="col s2"></div>
        </div>
      </div>
