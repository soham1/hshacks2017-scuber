<html>
  <% include ../partials/head %>
  <style>
    html {
      background-image: url("/images/pattern2.png");
    }
  </style>
  <body class="container">
    <!-- Parent Details -->
    <!-- Google Map of plotted route, maybe even estimated time? -->
      <div class="row">
        <div class="col s2"></div>
        <div class="col s8">
          <div class="card">
            <div class="card-image">
              <img src="<%=parent.carPhoto%>"></img>
            </div>
            <div class="card-content">
              <ul class="collection">
                <li class="collection-item avatar">
                  <img src="<%=parent.photo%>" alt="" class="circle">
                  <span class="name"><%=parent.name%></span>
                </li>
                <li class="collection-item avatar">
                  <i class="material-icons circle green">info</i>
                  <span class="carMakeModel">Model: <%=parent.carMakeModel%></span>
                  <div class="licensePlate">License Plate: <%=parent.licensePlate%></span>
                </li>
              </ul>
              <a class="waves-effect waves-light btn" href="/rateParent/<%=trip._id%>/<%=tripRoute._id%>">Rate</a>
            </div>
          </div>
        </div>
        <div class="col s2"></div>
      </div>
    <% include ../partials/footer %>
  </body>
</html>