<html>
  <% include ../partials/head %>
  <body>
    <header>
      <nav class="top-nav">
        <div class="container">
          <div class="nav-wrapper">
            <a class="page-title">Post-Ride</a>
          </div>
        </div>
      </nav>
      <style>
        html {
          background-image: url("/images/pattern2.png");
        }
        
        .top-nav {
          height: 84px;
        }
        
        nav {
          color: #fff;
          background-color: #ee6e73;
          width: 100%;
        }
        
        .page-title {
          font-size: 32px;
          line-height: 84px;
        }
        
      </style>
    </header>
    
    <div class="container">
      <div class="row">
        <div class="display: flex; align-items: center">
          <div class="col s2"></div>
          <div class="col s8">
            <div class="card hoverable">
              <div class="card-content">
                <span class="card-title">Rate this ride</span>
                <p><strong>After student has arrived at his or her destination</strong>, please rate your student.</p>
                <form id="ratings" method="POST" action="/rateStudent">
                  <input type="hidden" name="tripRouteId" value="<%=tripRoute._id%>">
                  <input type="hidden" name="destination" value="<%=student.destination%>">
                  <input type="hidden" name="studentId" value="<%= student._id %>">
                  <br />
                  <span>
                    <input name="star" type="radio" id="star-1" value="1" />
                    <label for="star-1">1</label>
                    <input name="star" type="radio" id="star-2" value="2" />
                    <label for="star-2">2</label>
                    <input name="star" type="radio" id="star-3" value="3" />
                    <label for="star-3">3</label>
                    <input name="star" type="radio" id="star-4" value="4" />
                    <label for="star-4">4</label>
                    <input name="star" type="radio" id="star-5" value="5" />
                    <label for="star-5">5</label>
                  </span>
                </form>
              </div>
              <div class="card-action">
                <a class="waves-effect waves-light btn red-lighten-2" type="submit" name="act" id="act">
                  <span>Submit Rating</span>
                </a>
              </div>
            </div>
          </div>
          <div class="col s2"></div>
        </div>
      </div>
    </div>
    <% include ../partials/footer %>
    
    <script>
      $(function () {
        $('#act').click(function(ev) {
          console.log("oncl");
          $('#ratings').submit();
        });
      });
    </script>
  </body>
</html>